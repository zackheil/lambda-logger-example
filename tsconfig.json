{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true,
        // "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        },
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        //   "types": ["jest"]
    },
    "include": [
        "./**/*",
        "node_modules"
    ],
    "exclude": [
        "node_modules",
        "tests",
        "**/*.tests.ts",
        "dist"
    ]
}